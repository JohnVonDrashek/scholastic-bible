---
interface Book {
  id: string;
  name: string;
  chapters: number;
  editCount: number;
  footnoteCount: number;
  illustrationCount?: number;
}

interface Props {
  books: Book[];
  title: string;
}

const { books, title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<section class="book-section">
  <h3>{title}</h3>
  <ul class="book-list">
    {books.map((book) => (
      <li>
        <a href={`${base}${book.id}/`}>{book.name}</a>
        <span class="book-meta">
          <span class="chapter-count">{book.chapters} ch.</span>
          {book.illustrationCount > 0 && (
            <span class="illustration-count" title="Illustrations">{book.illustrationCount} ill.</span>
          )}
          {book.editCount > 0 && (
            <span class="edit-count" title="Edited verses">{book.editCount} edits</span>
          )}
          {book.footnoteCount > 0 && (
            <span class="footnote-count" title="Commentary notes">{book.footnoteCount} notes</span>
          )}
        </span>
      </li>
    ))}
  </ul>
</section>

<style>
  .book-section {
    margin-bottom: 1.5rem;
  }

  .book-section h3 {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-muted);
    margin-bottom: 0.5rem;
    font-family: var(--font-heading);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .book-list {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 0.5rem;
  }

  .book-list li {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .book-list a {
    color: var(--color-text);
    text-decoration: none;
    position: relative;
    display: inline-block;
    transition: color 0.3s ease;
  }

  .book-list a::before,
  .book-list a::after {
    content: '‚ùß';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.7em;
    color: var(--color-accent);
    opacity: 0;
    transition: all 0.3s ease;
  }

  .book-list a::before {
    right: 100%;
    margin-right: 0.3em;
    transform: translateY(-50%) translateX(0.5em) scaleX(-1);
  }

  .book-list a::after {
    left: 100%;
    margin-left: 0.3em;
    transform: translateY(-50%) translateX(-0.5em);
  }

  .book-list a:hover {
    color: var(--color-accent);
  }

  .book-list a:hover::before {
    opacity: 1;
    transform: translateY(-50%) translateX(0) scaleX(-1);
  }

  .book-list a:hover::after {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }

  .book-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    align-items: center;
  }

  .chapter-count {
    font-size: 0.75rem;
    color: var(--color-muted);
    font-family: var(--font-sans);
  }

  .edit-count {
    font-size: 0.7rem;
    color: white;
    background: var(--color-accent);
    padding: 0.1rem 0.4rem;
    border-radius: 3px;
    font-family: var(--font-sans);
  }

  .footnote-count {
    font-size: 0.7rem;
    color: var(--color-accent);
    background: var(--color-patched);
    padding: 0.1rem 0.4rem;
    border-radius: 3px;
    font-family: var(--font-sans);
  }

  .illustration-count {
    font-size: 0.7rem;
    color: white;
    background: var(--color-illustration);
    padding: 0.1rem 0.4rem;
    border-radius: 3px;
    font-family: var(--font-sans);
  }
</style>
