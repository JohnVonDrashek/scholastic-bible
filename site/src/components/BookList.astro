---
interface Book {
  id: string;
  name: string;
  chapters: number;
  editCount: number;
  footnoteCount: number;
  illustrationCount?: number;
}

interface Props {
  books: Book[];
  title: string;
}

const { books, title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<section class="book-section">
  <h2>{title}</h2>
  <ul class="book-list">
    {books.map((book) => (
      <li>
        <a href={`${base}${book.id}`}>{book.name}</a>
        <span class="book-meta">
          <span class="chapter-count">{book.chapters} ch.</span>
          {book.illustrationCount > 0 && (
            <span class="illustration-count" title="Illustrations">{book.illustrationCount} ill.</span>
          )}
          {book.editCount > 0 && (
            <span class="edit-count" title="Edited verses">{book.editCount} edits</span>
          )}
          {book.footnoteCount > 0 && (
            <span class="footnote-count" title="Commentary notes">{book.footnoteCount} notes</span>
          )}
        </span>
      </li>
    ))}
  </ul>
</section>

<style>
  .book-section {
    margin-bottom: 2rem;
  }

  .book-list {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 0.5rem;
  }

  .book-list li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .book-list a {
    color: var(--color-text);
    text-decoration: none;
  }

  .book-list a:hover {
    color: var(--color-accent);
  }

  .book-meta {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .chapter-count {
    font-size: 0.75rem;
    color: var(--color-muted);
    font-family: var(--font-sans);
  }

  .edit-count {
    font-size: 0.7rem;
    color: white;
    background: var(--color-accent);
    padding: 0.1rem 0.4rem;
    border-radius: 3px;
    font-family: var(--font-sans);
  }

  .footnote-count {
    font-size: 0.7rem;
    color: var(--color-accent);
    background: var(--color-patched);
    padding: 0.1rem 0.4rem;
    border-radius: 3px;
    font-family: var(--font-sans);
  }

  .illustration-count {
    font-size: 0.7rem;
    color: white;
    background: #6B4423;
    padding: 0.1rem 0.4rem;
    border-radius: 3px;
    font-family: var(--font-sans);
  }
</style>
