---
import { ViewTransitions } from 'astro:transitions';
import { getBookBackground, getBookColor } from '../lib/colorPalette';

interface Props {
  title: string;
  bookId?: string;
  parallaxBg?: string;
}

const { title, bookId, parallaxBg } = Astro.props;
const base = import.meta.env.BASE_URL;
const backgroundColor = bookId ? getBookBackground(bookId) : '#faf9f7';
const bookColor = bookId ? getBookColor(bookId) : '#8b4513';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Scholastic Bible - A study-oriented translation with scholastic commentary" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600&family=Cinzel+Decorative:wght@700&family=EB+Garamond:ital,wght@0,400;0,500;0,600;1,400;1,500&display=swap" rel="stylesheet">
    <title>{title} | Scholastic Bible</title>
    <ViewTransitions />
    <script is:inline>
      (function() {
        function applyTheme() {
          const stored = localStorage.getItem('theme');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          if (stored === 'dark' || (!stored && prefersDark)) {
            document.documentElement.setAttribute('data-theme', 'dark');
          } else {
            document.documentElement.removeAttribute('data-theme');
          }
        }

        // Apply on initial load
        applyTheme();

        // Re-apply after View Transitions swap the DOM
        document.addEventListener('astro:after-swap', applyTheme);
      })();
    </script>
    <style>
      :root {
        --color-bg: #faf9f7;
        --color-text: #2c2c2c;
        --color-muted: #666;
        --color-accent: #8b4513;
        --color-patched: #fff8e7;
        --color-border: #e0d8cf;
        --color-highlight: #fff3cd;
        --color-illustration: #6B4423;
        --font-serif: 'EB Garamond', Georgia, serif;
        --font-heading: 'Cinzel', Georgia, serif;
        --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        --font-drop-cap: 'Cinzel Decorative', serif;
        --max-width: 720px;
      }

      [data-theme="dark"] {
        --color-bg: #1a1a1a;
        --color-text: #e8e6e3;
        --color-muted: #a0a0a0;
        --color-accent: #c9a868;
        --color-patched: #2a2520;
        --color-border: #3a3530;
        --color-highlight: #3d3520;
        --color-illustration: #8b6b43;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: var(--font-serif);
        font-size: 19px;
        line-height: 1.75;
        color: var(--color-text);
        background-color: var(--book-bg, var(--color-bg));
      }

      .page {
        max-width: 900px;
        margin: 0 auto;
        min-height: 100vh;
        view-transition-name: page-container;
      }

      header {
        border-bottom: 1px solid var(--color-border);
        padding: 1rem;
        background: transparent;
        position: relative;
        z-index: 1;
        view-transition-name: site-header;
      }

      header nav {
        max-width: var(--max-width);
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      header a {
        color: var(--color-text);
        text-decoration: none;
      }

      header a:hover {
        color: var(--color-accent);
      }

      header .site-title {
        font-family: var(--font-heading);
        font-size: 1.25rem;
        font-weight: 400;
        letter-spacing: 0.1em;
        text-transform: uppercase;
      }

      /* Breadcrumb - use :global because content comes from slots */
      :global(.breadcrumb) {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        font-family: var(--font-heading);
      }

      :global(.breadcrumb span) {
        color: var(--color-muted);
      }

      :global(.breadcrumb span:first-child),
      :global(.breadcrumb span:nth-child(3)) {
        margin: 0 0.4rem;
        opacity: 0.5;
      }

      :global(.breadcrumb a),
      :global(.breadcrumb a:link),
      :global(.breadcrumb a:visited) {
        color: var(--color-text);
        text-decoration: none;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        transition: all 0.2s ease;
        font-weight: 500;
      }

      :global(.breadcrumb a:hover) {
        color: var(--color-accent);
        background: color-mix(in srgb, var(--color-accent) 10%, transparent);
      }

      main {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      h1 {
        font-family: var(--font-heading);
        font-size: 2rem;
        font-weight: 400;
        margin-bottom: 1.5rem;
        color: var(--color-text);
        letter-spacing: 0.05em;
      }

      h2 {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        font-weight: 400;
        margin: 2rem 0 1rem;
        color: var(--color-text);
        letter-spacing: 0.03em;
      }

      a {
        color: var(--color-accent);
      }

      footer {
        border-top: 1px solid var(--color-border);
        padding: 2rem 1rem;
        text-align: center;
        color: var(--color-muted);
        font-size: 0.875rem;
        font-style: italic;
        view-transition-name: site-footer;
      }

      .nav-link {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-muted);
        padding: 0.4rem;
        border-radius: 4px;
        transition: color 0.2s;
      }

      .nav-link:hover {
        color: var(--color-accent);
      }

      .search-link {
        margin-left: auto;
      }

      .theme-toggle {
        background: none;
        border: 1px solid var(--color-border);
        border-radius: 4px;
        padding: 0.4rem 0.5rem;
        cursor: pointer;
        color: var(--color-muted);
        font-size: 1rem;
        line-height: 1;
        transition: color 0.2s, border-color 0.2s;
      }

      .theme-toggle:hover {
        color: var(--color-accent);
        border-color: var(--color-accent);
      }

      .theme-toggle .icon-sun,
      .theme-toggle .icon-moon {
        display: none;
      }

      :root .theme-toggle .icon-moon {
        display: inline;
      }

      [data-theme="dark"] .theme-toggle .icon-sun {
        display: inline;
      }

      [data-theme="dark"] .theme-toggle .icon-moon {
        display: none;
      }

      [data-theme="dark"] body {
        background-color: #0d0d0d;
      }

      /* Animate only the main content area */
      main {
        view-transition-name: main-content;
      }
    </style>

    <!-- View Transition animations must be global (not scoped) -->
    <style is:global>
      /*
       * View Transition Strategy:
       * - root: disabled (no full-page flash)
       * - site-header: persists without animation (identical across pages)
       * - site-footer: persists without animation (identical across pages)
       * - page-container: persists without animation (structural element)
       * - main-content: crossfades (content changes between pages)
       * - parallax-bg: crossfades when image changes, persists when same
       * - parallax-overlay: crossfades with background
       */

      /* Disable root transition to prevent full-page flash */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation: none;
      }

      /* Header persists without animation - it's identical across pages */
      ::view-transition-old(site-header),
      ::view-transition-new(site-header) {
        animation: none;
      }

      /* Footer persists without animation - it's identical across pages */
      ::view-transition-old(site-footer),
      ::view-transition-new(site-footer) {
        animation: none;
      }

      /* Page container persists without animation */
      ::view-transition-old(page-container),
      ::view-transition-new(page-container) {
        animation: none;
      }

      /* Main content crossfades - this is where the actual content changes */
      ::view-transition-old(main-content) {
        animation: vt-fade-out 0.2s ease-out both;
      }

      ::view-transition-new(main-content) {
        animation: vt-fade-in 0.2s ease-out both;
      }

      /* Parallax background crossfades properly: old fades OUT, new fades IN */
      ::view-transition-old(parallax-bg) {
        animation: vt-fade-out 0.25s ease-out both;
      }

      ::view-transition-new(parallax-bg) {
        animation: vt-fade-in 0.25s ease-out both;
      }

      /* Parallax overlay crossfades with background */
      ::view-transition-old(parallax-overlay) {
        animation: vt-fade-out 0.25s ease-out both;
      }

      ::view-transition-new(parallax-overlay) {
        animation: vt-fade-in 0.25s ease-out both;
      }

      /* Animation keyframes */
      @keyframes vt-fade-out {
        from { opacity: 1; }
        to { opacity: 0; }
      }

      @keyframes vt-fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
      }

      /* Parallax background styles */
      .parallax-bg {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-size: 115% auto;
        background-position: center top;
        background-repeat: no-repeat;
        z-index: -2;
        will-change: transform;
        pointer-events: none;
        view-transition-name: parallax-bg;
      }

      .parallax-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          to bottom,
          rgba(250, 249, 247, 0.3) 0%,
          rgba(250, 249, 247, 0.7) 30%,
          rgba(250, 249, 247, 0.85) 60%,
          rgba(250, 249, 247, 0.95) 100%
        );
        z-index: -1;
        pointer-events: none;
        view-transition-name: parallax-overlay;
      }

      [data-theme="dark"] .parallax-overlay {
        background: linear-gradient(
          to bottom,
          rgba(26, 26, 26, 0.4) 0%,
          rgba(26, 26, 26, 0.75) 30%,
          rgba(26, 26, 26, 0.9) 60%,
          rgba(26, 26, 26, 0.97) 100%
        );
      }

      [data-theme="dark"] .parallax-bg {
        filter: brightness(0.4) sepia(0.4);
      }
    </style>
  </head>
  <body style={`--book-bg: ${backgroundColor}; --book-color: ${bookColor}`}>
    {parallaxBg && (
      <>
        <div class="parallax-bg" id="parallax-bg" style={`background-image: url('${parallaxBg}')`}></div>
        <div class="parallax-overlay"></div>
      </>
    )}
    <div class="page">
      <header>
        <nav>
          <a href={base} class="site-title">Scholastic Bible</a>
          <slot name="breadcrumb" />
          <a href={`${base}search/`} class="nav-link search-link" aria-label="Search">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </a>
          <button class="theme-toggle" aria-label="Toggle dark mode">
            <span class="icon-sun">‚òÄÔ∏è</span>
            <span class="icon-moon">üåô</span>
          </button>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <p>Ad maiorem Dei gloriam</p>
      </footer>
    </div>
    <script>
      function setupThemeToggle() {
        const toggle = document.querySelector('.theme-toggle');
        if (!toggle) return;

        function isDark() {
          return document.documentElement.getAttribute('data-theme') === 'dark';
        }

        function setTheme(dark: boolean) {
          if (dark) {
            document.documentElement.setAttribute('data-theme', 'dark');
            localStorage.setItem('theme', 'dark');
          } else {
            document.documentElement.removeAttribute('data-theme');
            localStorage.setItem('theme', 'light');
          }
        }

        // Remove existing listener to prevent duplicates
        const newToggle = toggle.cloneNode(true);
        toggle.parentNode?.replaceChild(newToggle, toggle);

        newToggle.addEventListener('click', () => {
          setTheme(!isDark());
        });
      }

      // Run on initial load and after each navigation
      document.addEventListener('astro:page-load', setupThemeToggle);

      // Listen for system preference changes (only if no manual preference)
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        const stored = localStorage.getItem('theme');
        if (!stored) {
          if (e.matches) {
            document.documentElement.setAttribute('data-theme', 'dark');
          } else {
            document.documentElement.removeAttribute('data-theme');
          }
        }
      });
    </script>
    <script>
      function setupParallax() {
        const bg = document.getElementById('parallax-bg');
        if (!bg) return;

        let ticking = false;

        function updateParallax() {
          const scrollY = window.scrollY;
          const docHeight = document.documentElement.scrollHeight - window.innerHeight;
          const scrollProgress = docHeight > 0 ? scrollY / docHeight : 0;

          const viewportWidth = window.innerWidth;
          const viewportHeight = window.innerHeight;
          const imageHeight = viewportWidth * 1.15 * (16 / 9);

          const topOffset = viewportWidth * 0.075 * (16 / 9);
          const extraHeight = Math.max(0, imageHeight - viewportHeight - topOffset);

          const yPos = -topOffset - (scrollProgress * extraHeight);

          bg.style.backgroundPosition = `center ${yPos}px`;
          ticking = false;
        }

        function onScroll() {
          if (!ticking) {
            requestAnimationFrame(updateParallax);
            ticking = true;
          }
        }

        window.addEventListener('scroll', onScroll, { passive: true });
        window.addEventListener('resize', updateParallax, { passive: true });
        updateParallax();
      }

      document.addEventListener('astro:page-load', setupParallax);
    </script>
  </body>
</html>
