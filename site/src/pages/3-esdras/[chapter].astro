---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Verse from '../../components/Verse.astro';
import VerseDivider from '../../components/VerseDivider.astro';
import Navigation from '../../components/Navigation.astro';
import Narration from '../../components/Narration.astro';
import ReadingProgress from '../../components/ReadingProgress.astro';
import bible from '../../data/bible.json';

export function getStaticPaths() {
  const { esdras3 } = bible.supplementary;
  return esdras3.chapters.map(chapter => ({
    params: { chapter: String(chapter.number) },
    props: { chapter }
  }));
}

const { chapter } = Astro.props;
const { esdras3 } = bible.supplementary;
const base = import.meta.env.BASE_URL;

const chapterNum = chapter.number;
const totalChapters = esdras3.chapters.length;

// Navigation links
const prevLink = chapterNum > 1
  ? { href: `${base}3-esdras/${chapterNum - 1}/`, label: `Chapter ${chapterNum - 1}` }
  : undefined;

const nextLink = chapterNum < totalChapters
  ? { href: `${base}3-esdras/${chapterNum + 1}/`, label: `Chapter ${chapterNum + 1}` }
  : undefined;
---

<BaseLayout title={`3 Esdras ${chapterNum}`} bookId="3-esdras">
  <Fragment slot="breadcrumb">
    <span class="breadcrumb">
      <span>/</span>
      <a href={`${base}3-esdras/`}>3 Esdras</a>
      <span>/</span>
      <span>Chapter {chapterNum}</span>
    </span>
  </Fragment>

  <h1>3 Esdras {chapterNum}</h1>

  <Narration />

  <div class="verses">
    {chapter.verses.map((verse, index) => (
      <>
        {index > 0 && index % 5 === 0 && <VerseDivider />}
        <Verse
          number={verse.number}
          text={verse.text}
          patched={false}
          challoner={[]}
          footnotes={[]}
          isFirst={index === 0}
        />
      </>
    ))}
  </div>

  <ReadingProgress bookId="3-esdras" chapter={chapterNum} />

  <Navigation prevLink={prevLink} nextLink={nextLink} />
</BaseLayout>

<style>
  .verses {
    margin-top: 1.5rem;
  }
</style>
